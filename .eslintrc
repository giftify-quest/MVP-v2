{
  "env": {
    "node": true,
    "es2021": true,
    "browser": true
  },
  "plugins": [
    "@typescript-eslint",
    "prettier"
  ],
  "extends": [
    "next/core-web-vitals",
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],
  "rules": {
    "no-console": "warn",
    "@typescript-eslint/no-unused-vars": "warn",
    "@typescript-eslint/explicit-module-boundary-types": "error",
    "@typescript-eslint/no-explicit-any": [
      "error",
      {
        "ignoreRestArgs": true
      }
    ],
    "prettier/prettier": [
      "error",
      {
        "bracketSpacing": true,
        "endOfLine": "lf",
        "printWidth": 80,
        "semi": true,
        "singleQuote": false,
        "tabWidth": 2,
        "trailingComma": "all"
      }
    ]
  },
  "root": true
}